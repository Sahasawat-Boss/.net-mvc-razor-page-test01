@{
    ViewData["Title"] = "Home Page";
    var userName = "Boss"; // Example of inline C# variable
    var today = DateTime.Now.ToString("dddd, MMMM dd, yyyy");
}

<div class="container py-5 text-center">
    <h1 class="display-4 text-primary fw-bold">Welcome, @userName!</h1>
    <p class="lead">Today is <strong>@today</strong></p>

    <hr class="my-4" />

    <p class="mb-4">
        Learn about
        <a href="https://learn.microsoft.com/aspnet/core" class="text-decoration-underline text-info">
            building Web apps with ASP.NET Core
        </a>.
    </p>

    <a class="btn btn-primary btn-lg mb-4" href="https://learn.microsoft.com/aspnet/core" role="button">
        Get Started
    </a>

    <!-- Crying Cat GIF -->
    <div>
        <img src="https://media.giphy.com/media/Xr9TlAqw3S7VPOrftK/giphy.gif" alt="Crying Cat" class="img-fluid rounded" style="max-width: 300px;" />
    </div>
</div>
