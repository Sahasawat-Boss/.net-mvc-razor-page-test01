@{
    ViewData["Title"] = "About";
    var developer = "Boss";
    var skills = new List<string> { "C#", "ASP.NET Core", "Razor View", "Bootstrap", "Git" };
}

<div class="container py-5">
    <h2 class="text-center text-primary mb-4">About This App</h2>

    <p class="lead text-center">
        Welcome to the About page. This app was built using ASP.NET Core MVC and Razor View.
    </p>

    <p class="text-center mb-5">
        This is a test About page created by <strong>@developer</strong>.
    </p>

    <h4 class="mb-3">🔧 Developer Skills LOL:</h4>
    <ul class="list-group mb-4">
        @foreach (var skill in skills)
        {
            <li class="list-group-item">@skill</li>
        }
    </ul>

    <div class="text-center">
        <a href="https://github.com/Sahasawat-Boss" target="_blank" class="btn btn-outline-dark">
            Visit My GitHub
        </a>
    </div>
</div>
